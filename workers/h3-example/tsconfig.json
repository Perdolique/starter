{
  "compilerOptions": {
    "moduleResolution": "bundler",
    "module": "esnext",

    "lib": [
      "ESNext"
    ],

    "skipLibCheck": true,
    "noEmit": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,

    "types": [
      "./worker-configuration.d.ts"
    ],

    "paths": {
      "@/*": ["./src/*"]
    }
  },

  "include": [
    "./src/**/*.ts"
  ]
}
